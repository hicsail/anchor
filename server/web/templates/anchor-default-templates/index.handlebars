<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div style="padding: 30px">
        <h3>{{title}}</h3>
        {{#role user 'researcher'}}
          <a class="btn btn-primary" href=/create/{{collectionName}}>Create</a>
        {{/role}}
        <hr>
        <div class="card">
          <div style="padding: 20px">
            <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
                <tr>
                  {{#each columns as |col|}}
                    <th {{#if col.invisible}} class='detail'{{/if}}>{{col.label}}</th>
                  {{/each}}                
                  {{#role user 'admin'}}
                    <th class='detail'>Edit</th>
                    <th class='detail'>Delete</th>
                  {{/role}}
               </tr>
              </thead>
                <tbody>
                  {{#each data as |record|}}
                    <tr>
                      {{#each record}}
                        <td>{{this}}</td>
                      {{/each}}
                      <td>
                        <button class="btn btn-secondary" id="{{concat 'edit' record._id}}" onclick="editDoc({{record._id}})">Edit
                        </button>
                      </td>
                      <td>
                        <button class="btn btn-danger" id="{{concat 'delete' record._id}}" onclick="deleteDoc({{record._id}})">Delete
                        </button>
                      </td>
                    </tr>
                  {{/each}}
                </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  var table;
  $(document).ready(function () {
    table = $('#table').DataTable({
      processing: true,
      serverSide: false,
      scrollX: true,
      scrollY: '500px',
      scrollCollapse: true,
      lengthChange: false,
      dom: 'Bfrtip',
      buttons: [
        'copy', 'csv', 'excel', 'pdf', 'print','colvis'
      ]     
    });
    table.columns( '.detail' ).visible( false );
  });
</script>
<script type="text/javascript" src="/public/scripts/tokens/index.js"></script>

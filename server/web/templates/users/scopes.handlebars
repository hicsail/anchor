<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div style="padding: 30px">
        <h3>{{title}}</h3>
        <hr>
        <p>Click on routes to change it's scope</p>
        <div class="card">
          <div style="padding: 20px">
            <table id="routeTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th>Path</th>
                  <th>Method</th>
                  {{#each role}}
                    <th>{{this.name}}</th>
                  {{/each}}
                </tr>
              </thead>
              <tbody>
                {{#each route as |routeRow path|}}
                  <tr>
                    <td>{{routePath @key}}</td>
                    <td>{{routeMethod @key}}</td>
                    {{#each ../role as |role|}}
                      <td>
                        <label>
                          <input class="scopeCheck" id="{{role.name}}" type="checkbox" onchange="onCheckboxClicked(this, {{jsonify routeRow}}, {{jsonify path}})" {{#routeHasScope ../this role.name}}checked{{/routeHasScope}}>
                        </label>
                      </td>
                    {{/each}}
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="/public/scripts/users/scopes.js"></script>
